/* usage.wxss */
.usage-main-list,
.demo-main-list {
  padding: 0rem 20rpx;
  width: 100%;
  padding-top: 30rpx;

}

.container-item-img {
  position: relative;
  background-size: contain;
  display: block;
  width: 100%;
}

.container-item-text {
  position: absolute;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  width: 100%;
  font-size: 36rpx;
  text-align: right;
  line-height:50rpx;
  padding:10rpx 10rpx;
  background: -moz-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.6));
  background: -webkit-gradient(linear, 0 0, 0 bottom, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 0.6)));
  background: -o-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.6));
}

.bigImgShow{
 display: block;
}

.container-item-describe {
  text-indent: 2em;
  font-size: 32rpx;
  line-height: 45rpx;
  background: #F3F3F3;
  border-bottom: 5px solid #efefef;
  color: #333;
  padding:24rpx 20rpx;
}

.innerTxt{
  width:100%;
}

.main-top {
  width: 100%;
  overflow: hidden;
  height: 500rpx;
}

.main-top-left {
  overflow: hidden;
  float: left;
  width: 50%;
  height: 100%;
}

.left-top {
    overflow: hidden;
  position: relative;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 50%;
}

.left-bottom {
    overflow: hidden;
  position: relative;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 50%;
}


.main-top-right {
  height: 100%;
  float: left;
  width: 50%;
}

.right-top {
    overflow: hidden;
  position: relative;
  margin: 0;
  padding: 0;
  height: 40%;
}

.right-bottom {
    overflow: hidden;
  position: relative;
  margin: 0;
  padding: 0;
  height: 60%;
}

.main-container {
  width: 100%;
  overflow: hidden;
}

.item-list {
  position: relative;
  width: 100%;
  overflow: hidden;
  margin-bottom: 20rpx;
  float: left;
}

